#!/bin/sh
# AIOS Pre-push Hook Wrapper for Cross-platform Compatibility
# Enhanced with consciousness-aware build and test validation

if command -v pwsh >/dev/null 2>&1; then
    exec pwsh -NoProfile -ExecutionPolicy Bypass -File "$(dirname "$0")/pre-push.ps1" "$@"
elif command -v powershell >/dev/null 2>&1; then
    exec powershell -NoProfile -ExecutionPolicy Bypass -File "$(dirname "$0")/pre-push.ps1" "$@"
else
    echo "Error: PowerShell not found. Please install PowerShell Core or Windows PowerShell."
    exit 1
fi
exit 0
