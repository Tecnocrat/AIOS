#!/bin/sh
# AIOS GitHook Entry Point - Pre-Push
# Delegates to PowerShell version for Windows or nucleus module for cross-platform

# For Windows/PowerShell environments, use the .ps1 version
if command -v pwsh >/dev/null 2>&1; then
    exec pwsh -ExecutionPolicy Bypass -File ".githooks/pre-push.ps1" "$@"
elif command -v powershell >/dev/null 2>&1; then
    exec powershell -ExecutionPolicy Bypass -File ".githooks/pre-push.ps1" "$@"
else
    # Fallback to nucleus module directly for non-Windows systems
    exec .githooks/modules/nucleus/pre-push "$@"
fi