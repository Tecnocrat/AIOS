#!/bin/sh
# AIOS GitHook Entry Point - Pre-Commit
# Delegates to NUCLEUS supercell for actual hook logic

# For Windows/PowerShell environments, use the .ps1 version
if command -v pwsh >/dev/null 2>&1; then
    exec pwsh -ExecutionPolicy Bypass -File ".githooks/supercells/nucleus/pre-commit.ps1"
elif command -v powershell >/dev/null 2>&1; then
    exec powershell -ExecutionPolicy Bypass -File ".githooks/supercells/nucleus/pre-commit.ps1"
else
    # Fallback to shell version
    exec .githooks/supercells/nucleus/pre-commit "$@"
fi