{
    "cmake.sourceDirectory": "/home/user/AIOS/core",
    
    // ══════════════════════════════════════════════════════════════════════════
    // AINLP Type Checking Configuration
    // Reference: Bible Appendix I (Tool Config Precedence)
    // ══════════════════════════════════════════════════════════════════════════
    "python.analysis.typeCheckingMode": "basic",
    
    // ══════════════════════════════════════════════════════════════════════════
    // AINLP Tool Consolidation: Pylance + Pylint (Flake8 disabled)
    // Reference: Bible v1.9 - Tool Consolidation Pattern
    //
    // Pylance: Type checking, IntelliSense, completions (real-time)
    // Pylint:  Style, docstrings, complexity (on-save for performance)
    // Flake8:  DISABLED - redundant with Pylint coverage
    // ══════════════════════════════════════════════════════════════════════════
    "pylint.enabled": true,
    "pylint.lintOnSave": true,
    "flake8.enabled": false,
    
    // ══════════════════════════════════════════════════════════════════════════
    // AINLP.buffer[120] - Line Length Liberation
    // Rationale: Line length irrelevant to AI agents (tokens) and humans (Alt+Z)
    // The 79-char PEP 8 rule is from 1970s terminal constraints - obsolete
    // C0301 DISABLED: Stop policing line length entirely
    // ══════════════════════════════════════════════════════════════════════════
    "python.linting.pylintArgs": [
        "--max-line-length=120",
        "--disable=C0301"
    ],
    
    // ══════════════════════════════════════════════════════════════════════════
    // Black Formatter: CONTROLLED - 120 chars, format on demand only
    // Prevents formatter from fighting with manual edits
    // ══════════════════════════════════════════════════════════════════════════
    "black-formatter.args": ["--line-length=120"],
    
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": false,
        "editor.rulers": [120]
    }
}