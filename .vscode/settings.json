{
    // Python Environment - Single Source of Truth
    "python.defaultInterpreterPath": "${workspaceFolder}/../.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    
    // Black Formatter as default Python formatter with auto-save
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    
    // Auto-save configuration for seamless formatting
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    
    // Pylance Analysis Configuration
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.exclude": [
        "**/tachyonic/archive/**",
        "**/evolution_lab/sandbox/**",
        "**/docs/archive/**"
    ],
    
    // JSON Schema mappings for AIOS dendritic configuration files
    "json.schemas": [
        {
            "fileMatch": ["tachyonic/consciousness/config_registry.json"],
            "url": "./tachyonic/consciousness/schemas/config_registry.v1.json"
        }
    ],
    
    // AIOS Format State Messenger integration
    "files.watcherExclude": {
        "**/tachyonic/format_*.json": true
    }
}
