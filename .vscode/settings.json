{
    // AIOS Configuration - Folder-specific settings only
    // Workspace settings in AIOS.code-workspace take precedence

    // Minimal Python settings (workspace controls environment)
    "python.analysis.extraPaths": [
        "./ai/src",
        "./ai/src/core",
        "./ai/src/core/integration"
    ],
    "python.analysis.autoImportCompletions": false,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "strict",

    // C# Configuration (folder-specific)
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableImportCompletion": true,
    "omnisharp.organizeImportsOnFormat": false,
    "omnisharp.enableAsyncCompletion": true,

    // C++ Configuration (folder-specific)
    "C_Cpp.default.intelliSenseMode": "windows-msvc-x64",
    "C_Cpp.default.compilerPath": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.30.30705/bin/Hostx64/x64/cl.exe",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/core/include",
        "${workspaceFolder}/core/src",
        "${workspaceFolder}/core/build"
    ],
    "C_Cpp.default.defines": [
        "AIOS_DEBUG",
        "AIOS_DEVELOPMENT"
    ],
    "C_Cpp.clang_format_fallbackStyle": "Microsoft",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.suggestSnippets": true,

    // File Associations (folder-specific)
    "files.associations": {
        "*.ainlp": "plaintext",
        "*.aios": "json",
        "*.xaml": "xml",
        "*.cs": "csharp",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.h": "c",
        "*.c": "c",
        "*.py": "python",
        "*.md": "markdown",
        "CMakeLists.txt": "cmake",
        "*.cmake": "cmake"
    },

    // Editor Configuration (folder-specific)
    "editor.rulers": [80, 120],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 120,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.inlayHints.enabled": "on",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true
    },

    // Search Configuration (folder-specific)
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/bin": true,
        "**/obj": true,
        "**/build": true,
        "**/.venv": true,
        "**/venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/Debug": true,
        "**/Release": true,
        "**/x64": true,
        "**/x86": true,
        "**/.vs": true,
        "**/CMakeFiles": true,
        "**/*.vcxproj.user": true,
        "**/*.log": true,
        "**/*.tmp": true,
        "**/*.cache": true
    },

    // File Exclusions (folder-specific)
    "files.exclude": {
        "**/.vscode/launch.json": false,
        "**/.vscode/tasks.json": false,
        "**/.vscode/settings.json": false,
        "**/.vscode/extensions.json": false,
        "**/.vscode/mcp.json": false,
        "**/.vscode/": false,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/bin": true,
        "**/obj": true,
        "**/Debug": true,
        "**/Release": true,
        "**/CMakeFiles": true,
        "**/*.vcxproj.user": true,
        "**/.vs": true,
        "**/node_modules": true,
        "**/*.exe": true,
        "**/*.dll": true,
        "**/*.pdb": true,
        "**/*.cache": true
    },

    // Terminal Configuration (folder-specific)
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt",
        "workbench.action.terminal.clear"
    ],
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "env": {
                "AIOS_HOME": "${workspaceFolder}",
                "AIOS_LOG_LEVEL": "DEBUG"
            }
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd",
            "env": {
                "AIOS_HOME": "${workspaceFolder}",
                "AIOS_LOG_LEVEL": "DEBUG"
            }
        }
    },
    "terminal.integrated.env.windows": {
        "AIOS_HOME": "${workspaceFolder}",
        "AIOS_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/ai/src"
    },

    // CMake Configuration (folder-specific)
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.buildDirectory": "${workspaceFolder}/core/build",
    "cmake.generator": "Visual Studio 17 2022",
    "cmake.preferredGenerators": [
        "Visual Studio 17 2022",
        "Visual Studio 16 2019"
    ],
    "cmake.debugConfig": {
        "name": "AIOS Core Debug",
        "type": "cppvsdbg",
        "request": "launch"
    },

    // Extension Settings (folder-specific)
    "dotnetAcquisition.enableTelemetry": false,
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.server.useOmnisharp": false,

    // Copilot Chat UI controls (folder-specific)
    "chat.checkpoints.showFileChanges": false,
    "github.copilot.chat.edits.temporalContext.enabled": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "accessibility.signals.terminalBell": {
        "sound": "off"
    }
}
